{
  "name": "@kodmq/core",
  "version": "1.0.0-beta.3",
  "description": "Background jobs and message queue for Node.js",
  "keywords": [
    "message queue",
    "background jobs"
  ],
  "author": "Andrew Kodkod <andrew@kodkod.me> (https://kodkod.me/)",
  "homepage": "https://kodmq.com",
  "repository": "kodmq/kodmq",
  "bugs": "https://github.com/kodmq/kodmq/issues",
  "funding": "https://github.com/sponsors/akodkod",
  "license": "MIT",
  "type": "module",
  "main": "./dist/kodmq.js",
  "types": "./dist/kodmq.d.ts",
  "exports": {
    ".": {
      "types": "./dist/kodmq.d.ts",
      "import": "./dist/kodmq.js",
      "require": "./dist/kodmq.js"
    },
    "./launcher": {
      "types": "./dist/launcher/index.d.ts",
      "import": "./dist/launcher/index.js",
      "require": "./dist/launcher/index.js"
    },
    "./adapter": {
      "types": "./dist/adapter.d.ts",
      "import": "./dist/adapter.js",
      "require": "./dist/adapter.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js",
      "require": "./dist/errors.js"
    },
    "./constants": {
      "types": "./dist/constants.d.ts",
      "import": "./dist/constants.js",
      "require": "./dist/constants.js"
    },
    "./types": {
      "types": "./dist/types.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "launcher": [
        "./dist/launcher/index.d.ts"
      ],
      "adapter": [
        "./dist/adapter/index.d.ts"
      ],
      "errors": [
        "./dist/errors.d.ts"
      ],
      "constants": [
        "./dist/constants.d.ts"
      ],
      "types": [
        "./dist/types.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --ext .ts . --fix",
    "test": "tap --jobs=1 --timeout=5",
    "tsc": "tsc -p ./tsconfig.lint.json",
    "build": "rollup -c && tsc"
  },
  "devDependencies": {
    "@kodmq/adapter-redis": "workspace:*",
    "@types/node": "20.6.2",
    "eslint-config-kodmq": "workspace:*",
    "rollup": "^3.29.2",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-esbuild": "6.0.1",
    "tap": "^18.4.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "colorette": "^2.0.20",
    "node-graceful-shutdown": "^1.1.5"
  }
}
